LISTEN_IP=127.0.0.1
# Bind address for the server
LISTEN_PORT=8089
# Listen port
REQUIRE_API_KEY=false
# Require valid API key for every request (disables public access)
REQUIRE_KEYS=false
# Fail startup if keys.json is missing or empty
ALLOW_QUERY_API_KEY=false
# Allow api_key in URL query for GET/HEAD (use only in trusted/internal environments)
AMOUNT_LENIENT_OCR=false
# Enable lenient amount normalization for OCR-like noisy inputs (EUR only)

# HTTPS only
TLS_CERT_FILE=./tls/cert.pem
# TLS certificate path
TLS_KEY_FILE=./tls/key.pem
# TLS private key path
# Comma-separated DNS/IP SANs for the self-signed certificate (used only if files do not exist)
TLS_HOSTS=localhost,127.0.0.1
# If cert/key are missing, auto-generate a self-signed pair
TLS_AUTO_SELF_SIGNED=true
# Validity of the generated self-signed certificate (days)
TLS_CERT_DAYS=365

READ_TIMEOUT_SEC=10
# Read timeout (seconds)
WRITE_TIMEOUT_SEC=15
# Write timeout (seconds)
IDLE_TIMEOUT_SEC=60
# Idle timeout (seconds)
